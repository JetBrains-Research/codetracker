<idea-plugin>
    <id>io.github.elena-lyulina.codetracker.codetracker</id>
    <name>codetracker</name>
    <vendor>JetBrains</vendor>

    <description><![CDATA[
    This is a plugin for tracking all code changes and storing them in .csv file.
    ]]></description>


    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="org.jetbrains.research.ml.codetracker.InitActivity"/>
        <toolWindow id="codetracker" anchor="right" factoryClass="org.jetbrains.research.ml.codetracker.ui.PluginToolWindowFactory"/>
        <registryKey key="codetracker.org.jetbrains.research.ml.codetracker.server.url" defaultValue="http://localhost:3000/api/" description="Base url for the codetracker org.jetbrains.research.ml.codetracker.server"/>
        <errorHandler implementation="org.jetbrains.research.ml.codetracker.reporting.GitHubErrorReporter"/>
    </extensions>

</idea-plugin>